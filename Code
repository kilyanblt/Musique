<script>
  // Année
  document.getElementById('year').textContent = new Date().getFullYear();

  // Démo audio sans fichier: un oscillateur WebAudio (bip mélodique 4 notes)
  let ctx, osc, gain, seqTimer;
  function startTone(freq=440) {
    if (!ctx) ctx = new (window.AudioContext||window.webkitAudioContext)();
    osc = ctx.createOscillator(); gain = ctx.createGain();
    osc.type = "sine"; osc.frequency.value = freq;
    gain.gain.value = 0.15;
    osc.connect(gain).connect(ctx.destination);
    osc.start();
  }
  function stopTone() {
    if (osc) { osc.stop(); osc.disconnect(); osc=null; }
    if (gain) { gain.disconnect(); gain=null; }
    if (seqTimer) { clearInterval(seqTimer); seqTimer=null; }
  }
  const notes = [440,523.25,659.25,587.33]; // A C E D
  document.getElementById('play').addEventListener('click', ()=>{
    stopTone();
    let i=0;
    startTone(notes[0]);
    seqTimer = setInterval(()=>{
      if(!ctx) return;
      i=(i+1)%notes.length;
      if(osc) osc.frequency.setValueAtTime(notes[i], ctx.currentTime);
    }, 400);
  });
  document.getElementById('stop').addEventListener('click', stopTone);

  // Scroll doux
  document.querySelectorAll('a[href^="#"]').forEach(a=>{
    a.addEventListener('click',e=>{
      const id=a.getAttribute('href').slice(1);
      const t=document.getElementById(id);
      if(t){e.preventDefault(); t.scrollIntoView({behavior:'smooth'})}
    })
  });
</script>

